# Anthropic API key for sentiment analysis
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Gallery secret key (leave empty to disable GitHub gallery feature)
GALLERY_SECRET_KEY=

# Optional: GitHub configuration for gallery storage
# Create a personal access token at https://github.com/settings/tokens
# Required permissions: repo (for creating releases)
GITHUB_TOKEN=
GITHUB_REPO=username/repository-name

# Memory Optimization Settings

# Sequential processing mode (default: true)
# Generates images one at a time to reduce memory usage
SEQUENTIAL_PROCESSING=true

# Custom image resolution (default: 1920x1080)
IMAGE_WIDTH=1920
IMAGE_HEIGHT=1080

# Enable low memory mode for maximum memory reduction (default: false)
# This forces sequential processing AND reduces resolution to 720p
LOW_MEMORY_MODE=false 